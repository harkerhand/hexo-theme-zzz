<%
page.title = theme.about && theme.about.title || '关于'
page.subtitle = theme.about && theme.about.subtitle || '关于我'
page.banner_img = theme.about && theme.about.banner_img || theme.default_cover_image
%>

<!-- About page specific CSS -->
<link rel="stylesheet" href="<%= config.root %>css/about.css">

<!-- Banner Component -->
<%- partial('_partial/banner', {
  title: page.title,
  subtitle: page.subtitle,
  banner_img: url_handler(page.banner_img)
}) %>

<!-- About Content -->
<div class="content-container">
  <div class="about-header">
    <% if (theme.about && theme.about.avatar) { %>
      <div class="about-avatar">
        <img src="<%= url_for(theme.about.avatar) %>" alt="Avatar">
      </div>
    <% } %>
    <h1 class="about-name"><%= theme.about && theme.about.name || config.author %></h1>
    <% if (theme.about && theme.about.intro) { %>
      <p class="about-intro"><%= theme.about.intro %></p>
    <% } %>
    
    <% if (theme.about && theme.about.icons) { %>
      <div class="about-icons">
        <% theme.about.icons.forEach(function(icon) { %>
          <% if (icon.qrcode) { %>
            <span class="about-icon qr-trigger">
              <i class="<%= icon.class %>"></i>
              <img class="qr-img" src="<%= url_for(icon.qrcode) %>" alt="QR Code">
            </span>
          <% } else { %>
            <a href="<%= icon.link %>" target="_blank" class="about-icon" 
               <% if (icon.tip) { %>title="<%= icon.tip %>"<% } %>>
              <i class="<%= icon.class %>"></i>
            </a>
          <% } %>
        <% }); %>
      </div>
    <% } %>
  </div>
  
  <div class="about-content">
    <div class="inner-content">
      <%
        // Find the about page content
        // In Hexo, when using custom layouts, the page content might not be directly available
        // So we need to find it from the site.pages collection
        var aboutPage = null;
        if (page.content) {
          // If page.content is available, use it directly
          aboutPage = page;
        } else {
          // Otherwise, find the page in site.pages
          site.pages.each(function(p) {
            if (p.path === 'about/index.html' || p.source.includes('about/index.md')) {
              aboutPage = p;
            }
          });
        }
      %>
      
      <% if (aboutPage && aboutPage.content) { %>
        <%- aboutPage.content %>
      <% } else { %>
        <p>暂无内容</p>
      <% } %>
    </div>
  </div>
</div>
