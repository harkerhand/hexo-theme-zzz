<% if (item.banner_img){ %>
  <div class="img-container">
    <img class="page-img" src="<%= (item.banner_img).startsWith('http') ? (item.banner_img).replace(/^\\/, '') : item.banner_img %>" alt="<%- item.title || 'Untitled' %>">
  </div>
  <% } %>
  
<div class="content-container">
  <div class="inner-content">
    <%- item.content %>
  </div>
</div>