<% if (item.banner_img){ %>
  <% console.log('Banner image found:', item.banner_img); %>
  <div class="img-container">
    <img class="page-img" src="<%= (item.banner_img || theme.default_cover_image).startsWith('http') ? (item.banner_img || theme.default_cover_image).replace(/^\\/, '') : (config.root + (item.banner_img || theme.default_cover_image).replace(/^\\/, '')) %>" alt="<%- item.title || 'Untitled' %>">
  </div>
  <% } %>
  
<div class="content-container">
  <div class="inner-content">
    <%- item.content %>
  </div>
</div>