<!DOCTYPE html>
<html lang="zh-CN">
<!-- Head tag -->
<%- partial('_partial/head') %>

  <body>
    <!-- 添加背景效果 -->
    <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, #000 0%, #1a1a1a 50%, #000 100%); z-index: -1;"></div>
    
    <div class="navbar-container">
      <!-- Header -->
      <%- partial('_partial/header') %>
    </div>
    
    <div style="margin-top: 80px;">
      <div class="super-container">
        <%- body %>
      </div>
      <% if (page.total > 1) { %>
        <nav class="page-nav">
          <%- paginator({prev_text: '← 上一页', next_text: '下一页 →'}) %>
        </nav>
      <% } %>
    </div>
    
    <!-- After footer scripts -->
    <%- partial('_partial/footer') %>
  </body>

</html>